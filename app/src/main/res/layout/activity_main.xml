<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".MainActivity">

    <!-- Минималистичный Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/primary"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MapMemories"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:letterSpacing="-0.03"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topHeader">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/memoriesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="120dp" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomDock"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="32dp"
        app:cardBackgroundColor="@color/surface_dark"
        app:cardCornerRadius="32dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp">

            <!-- 1. Карта -->
            <ImageView
                android:id="@+id/fabMap"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="10dp"
                android:src="@drawable/ic_map"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                app:tint="@color/text_primary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/fabSettings"
                app:layout_constraintHorizontal_chainStyle="spread_inside"/>

            <!-- 2. Настройки -->
            <ImageView
                android:id="@+id/fabSettings"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="10dp"
                android:src="@drawable/ic_setting"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                app:tint="@color/text_primary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fabMap"
                app:layout_constraintEnd_toStartOf="@+id/fabAdd"/>

            <!-- 3. Центральная кнопка Добавления -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/fabAdd"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="@color/text_primary"
                app:cardCornerRadius="24dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fabSettings"
                app:layout_constraintEnd_toStartOf="@+id/fabChats">

                <ImageView
                    android:id="@+id/fabAddIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/avd_add_rotate"
                    app:tint="@color/primary" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 4. Чаты -->
            <ImageView
                android:id="@+id/fabChats"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="10dp"
                android:src="@drawable/ic_chat"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                app:tint="@color/text_primary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fabAdd"
                app:layout_constraintEnd_toStartOf="@+id/profileButton"/>

            <!-- 5. Профиль -->
            <ImageView
                android:id="@+id/profileButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_profile_placeholder"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/circle_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fabChats"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Оффлайн бейдж (Привязан к профилю, чтобы не ломать симметрию) -->
            <ImageView
                android:id="@+id/offlineBadge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_download_offline"
                android:visibility="gone"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/surface_dark"
                android:padding="2dp"
                app:tint="@color/accent"
                app:layout_constraintTop_toTopOf="@+id/profileButton"
                app:layout_constraintEnd_toEndOf="@+id/profileButton"
                android:translationX="6dp"
                android:translationY="-6dp"
                android:elevation="2dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>