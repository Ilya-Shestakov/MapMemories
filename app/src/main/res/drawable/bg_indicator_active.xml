<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Отступы вокруг индикатора, чтобы они не слипались -->
    <item android:left="4dp" android:right="4dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Ярко-белый -->
            <corners android:radius="4dp"/>
            <size android:width="24dp" android:height="6dp"/> <!-- Длинная капсула -->
        </shape>
    </item>
</layer-list>