<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <!-- 1. Добавлена кнопка НАЗАД (navigationIcon) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/secondary"
        app:titleTextColor="@color/text_primary"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/bottomPanel"/>

    <!-- 2. Обновленная нижняя панель -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@color/secondary"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Текст слева -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Выберите воспоминание..."
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:layout_marginStart="8dp"/>

        <!-- Кнопка справа -->
        <ImageButton
            android:id="@+id/btnSendPost"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_add_camera_black"
            app:tint="@color/accent"
            android:background="@drawable/circle_background"
            android:backgroundTint="#10FFFFFF"
            android:contentDescription="Отправить пост"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>