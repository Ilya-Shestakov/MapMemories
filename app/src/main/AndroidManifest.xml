<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mapmemories">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".MapMemoriesApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="MapMemories"
        android:theme="@style/Theme.MapMemories"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Settings.Setting"
            android:exported="false" />
        <activity
            android:name=".Profile.UserProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Chats.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".Profile.PickPostActivity"
            android:exported="false" />
        <activity
            android:name=".Lenta.AllMemoriesActivity"
            android:exported="false" />
        <activity
            android:name=".Lenta.PickLocationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
        <activity
            android:name=".Lenta.Map"
            android:exported="false"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".Post.CreatePostActivity"
            android:exported="false"
            android:theme="@style/Theme.MapMemories.Transparent" />
        <activity
            android:name=".Profile.Profile"
            android:exported="false"
            android:theme="@style/Theme.MapMemories.Transparent" />

        <meta-data
            android:name="osmdroid.basePath"
            android:value="/osmdroid" />
        <meta-data
            android:name="osmdroid.osmroid.userAgent"
            android:value="MapMemoriesApp/1.0" />

        <activity android:name=".Post.PostDetailsActivity" />
        <activity
            android:name=".Post.ViewPostDetailsActivity"
            android:theme="@style/Theme.MapMemories.Transparent" />
        <activity
            android:name=".LogRegStart.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LogRegStart.LoginActivity" />
        <activity android:name=".LogRegStart.RegisterActivity" />
        <activity android:name=".LogRegStart.OnboardingActivity" />
        <activity android:name=".Lenta.MainActivity" />
        <activity
            android:name=".Chats.ChatListActivity"
            android:exported="false"
            android:theme="@style/Theme.Transparent" />

        <service
            android:name=".systemHelpers.MessageListenerService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>